{
	"name": "revision",
	"displayName": "revision",
	"description": "A tool to allow incremental screenwriting progress",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.67.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jon-simpkins/revision.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:revision.helloWorld",
		"onCommand:revision.contextExample",
		"onCommand:revision.askFavoriteColor",
		"onLanguage:revision_metadata"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "revision.helloWorld",
				"title": "Revision: Hello World"
			},
			{
				"command": "revision.contextExample",
				"title": "Revision: Metadata Example"
			},
			{
				"command": "revision.askFavoriteColor",
				"title": "Revision: Ask Favorite Color"
			}
		],
		"languages": [
			{
				"id": "revision_metadata",
				"extensions": [
					"metadata.write"
				]
			},
			{
				"id": "revision_fountain",
				"extensions": [
					"fountain.write"
				]
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "resourceLangId == revision_metadata",
					"command": "revision.contextExample",
					"group": "navigation"
				}
			],
			"editor/title": [
				{
					"when": "resourceLangId == revision_metadata",
					"command": "revision.contextExample",
					"group": "navigation"
				}
			]
		},
		"grammars": [
			{
				"language": "revision_fountain",
				"scopeName": "source.fountain.revision",
				"path": "./syntaxes/fountain-write.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"compile-syntaxes": "npx js-yaml syntaxes/fountain-write.tmLanguage.yaml > syntaxes/fountain-write.tmLanguage.json",
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "npm run compile-syntaxes && webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.67.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"handlebars": "^4.7.7",
		"js-yaml": "^4.1.0",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}
